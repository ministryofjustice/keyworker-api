{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>ministryofjustice/hmpps-renovate-config:jvm"],
  "reviewers": ["neilmendum", "timoj58", "natclamp-moj"],
  "packageRules": [
    {
      "matchManagers": ["gradle"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non major Gradle dependencies",
      "groupSlug": "all-gradle-minor-patch"
    },
    {
      "matchDatasources": ["gradle"],
      "matchPackageNames": ["camel-spring-boot"],
      "allowedVersions": "3.8.0"
    },
    {
      "matchDatasources": ["gradle"],
      "matchPackageNames": ["camel-quartz"],
      "allowedVersions": "3.8.0"
    },
    {
      "matchDatasources": ["gradle"],
      "matchPackageNames": ["camel-direct"],
      "allowedVersions": "3.8.0"
    },
    {
      "matchDatasources": ["gradle"],
      "matchPackageNames": ["camel-test-spring"],
      "allowedVersions": "3.8.0"
    },
    {
      "matchDatasources": ["gradle"],
      "matchPackageNames": ["spock-spring"],
      "allowedVersions": "2.0-groovy-3.0"
    },
    {
      "matchDatasources": ["gradle"],
      "matchPackageNames": ["spock-core"],
      "allowedVersions": "2.0-groovy-3.0"
    },
    {
      "matchDatasources": ["gradle"],
      "matchPackageNames": ["geb-core"],
      "allowedVersions": "6.0"
    },
    {
      "matchDatasources": ["gradle"],
      "matchPackageNames": ["geb-spock"],
      "allowedVersions": "6.0"
    }
  ]
}
